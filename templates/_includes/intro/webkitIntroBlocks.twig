<div class="webkit-intro-action-outer-grid -my-12">

<!--bg img-->
	<div class="webkit-intro-action-background-image" style="background-image: url('{{ matrixBlock.bgImg.one().getUrl('webkitFullSize')|default('') }}');">
		<img class="img-hidden" src="{{ matrixBlock.bgImg.one().getUrl('webkitFullSize')|default('') }}" alt="{{ matrixBlock.bgImg.one().title|default('') }}">
	

 <!--seo-->
	<div class="l:mt-0 main-grid-intro-structure">
		<div class="webkit-intro-action-text-grid mt-60 l:mt-16">
			<div class="webkit-intro-action-heading">
				<{{craft.webkit.seo.getHeadingTagStart('h1')}}>
					{{ matrixBlock.heading|nl2br }}
				</{{craft.webkit.seo.getHeadingTagEnd('h1')}}>
				{% if matrixBlock.heading2 %}
					<div class="webkit-intro-action-heading2">
						{{ matrixBlock.heading2|nl2br }}
					</div>
				{% endif %}
			</div>


				<!--header intro-->
					<div class="webkit-intro-action-text">
						<h5 class=" mb-0 text-sm ">{{ matrixBlock.blockTitle|nl2br }}</h5>
						<h1 class="mb-2 mt-2 ">{{ matrixBlock.text|nl2br }}</h1>
					</div> 

				<!--header intro boxes-->

					<div class = " flex w-full l:flex-wrap  l:mb-10">
							{% for box in matrixBlock.textBlocks.all() %}				
								{% set logo = box.logo.one() %}
								
								<a href="{{box.blockLink.getUrl()}}">
									<div class="box-kategorie mr-1 w-1/3 l:w-full  p-5 m:mb-2" style="background: {{ box.farbe }}">
										<img class="logo-img-intro" src="{{ logo.url | default("") }}" alt="#">
										<h4 class="text-color2 mt-5 mb-4 min-two-lines-height
																{% if currentSite.handle == "transport" %}s:block
																{% elseif currentSite.handle == "agro" %}s:block	
																{% elseif currentSite.handle == "energie" %}s:block
																{% else %}s:hidden
																{% endif %} 
										">{{ box.text }}</h4>
										<a href="#" class="text-color2 float-right "><span class="
																{% if currentSite.handle == "transport" %}s:block
																{% elseif currentSite.handle == "agro" %}s:block	
																{% elseif currentSite.handle == "energie" %}s:block
																{% else %}s:hidden
																{% endif %}
										">{{ box.blockLink.getText("show more") }}</span>  <i class="fas fa-arrow-circle-right"></i> </a>
									</div>
								<a>
							{% endfor %}
					</div>

		</div>

	</div> 
</div>

</div>
