<div class="header-active-overlay hidden opacity-40"></div>

<div class="webkit-header">
		
			
	<div class="webkit-header-cell ">
																						 
		<div class="webkit-header-inner-grid">

				<!--header logo main -->
			<div class="webkit-header-logo">
			{% set homepage = craft.entries.slug('homepage').first() %}
				<a class="flex ml-3 "
				    href="{{ siteUrl }}">
						<div class="w-40 ">
							<img class="webkit-header-logo-image " src="{{ header.webkitHeaderLogo.one().getUrl()|default('')}}" alt="Logo">
						</div>
						<!--navigation left-->
							{% set navItems = navigation.navigationMehrstufig.level(1).all() %}

							<div class="header-wrap-right-navi">
									<ul class="webkit-navi flex ">
										{% for navItem in navItems %}

											{% set navLink = navItem.linkButton %}
											<li class="webkit-navi-links text-color7">
						
											<a href="{{ navLink.getUrl()|default("") }}" class="mx-5">
												{{ navLink.getCustomText("")|default("") }}
											</a></li>

										{% endfor %}
									</ul>
									<button class="webkit-btn__big main-btn m-3 mr-5">	{{ header.linkButton2.getCustomText()|default('')}}</button>
							</div>
				</a>
			</div>
			
			<!-- ***************************************** -->
			<div v-on:click.stop class="webkit-header-navigation-container">
				<div class="webkit-header-nav-buttons">

					<!--menu mobile with color variables-->
					<div class="webkit-menu-icon h-12 webkit-header-button-small  hidden xl:flex justify-center items-center bg-color3
					" v-overlay:toggle>
						<i class="open-icon fal fa-ellipsis-v m-auto text-f2"></i>
						<i class="close-icon fal fa-times-circle m-auto hidden text-f4"></i>
					</div>

					
				</div>
			</div>
			{% include "_layouts/overlays/nav/overlay" %}
		</div>
	</div>

</div>

